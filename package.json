  "build": {
    "appId": "com.clarisoft.go-data",
    "productName": "Go.Data",
    "copyright": "Copyright Â© 2018 World Health Organization",
    "files": [
      "app/*",
      "controllers/*",
      "resources/**/*",
      "logger/*",
      "updater/*",
      "utils/*",
      "windows/**/*",
      "main.js",
      "index.html",
      "renderer.js"
    ],
    "extraResources": [
      "app-management/**/*",
      "go-data/build/**/*",
      "platforms/${env.PLATFORM}/${env.ARCH}/${env.VERSION}"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://54.164.207.48:42000"
      }
    ]
